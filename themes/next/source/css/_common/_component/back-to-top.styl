.back-to-top {
  position: fixed;
  bottom: 20px;
  right: 50px;
  z-index: $zindex-5;
/*  width: 15px;
  height: 13px;*/
  width: 20px;
  height: 20px;
  padding: 5px;
  background: rgba(0,0,0,0.2);
  color: white;
  cursor: pointer;
  -webkit-transform: translateZ(0);

  +mobile() {
    display: none;
  }
  +tablet() {
    display: none;
  }

  &:before {
    display: block;
    content: " ";
    margin-top: 5px;
    margin-left: 3px;
    width: 0;
    height: 0;
    border-width: 0 7px 8px 7px;
    border-color: transparent transparent white transparent;
    border-style: solid;
  }

  &:hover {
    background: rgba(0,0,0,0.1);
  }
}
