// Custom styles.

.post-body img {
    margin: 0 auto;
    cursor: pointer;
    cursor: zoom-out;
    cursor: -webkit-zoom-in;
    display: block!important;
}

.post-body .pic-title {
	margin: 0 auto;
    text-align: center;
}

.post-body p .pic-title span {
    min-width: 10%;
    min-height: 20px;
    display: inline-block;
    padding: 5px;
    margin: 0 auto;
    border-bottom: 1px solid #d9d9d9;
    font-size: 14px;
    color: #999999;
    font-weight: bold;
}

.posts-expand .post-body .fancybox img {
	margin: 0 auto;
}

.post .highlight {
    padding: 10px 15px 25px;
}

figure.highlight:before {
    content: ' ';
    color: rgba(0,0,0,0.15);
    text-align: right;
    display: block;
    font-weight: bold;
    position: relative;
    font-size: 18px;
    font-family: "Consolas","Liberation Mono",Courier,monospace;
    z-index: 0;
    line-height: 1;
    margin-bottom: 0px;
}

figure.highlight[data-lang]:before {
    content: attr(data-lang);
}

