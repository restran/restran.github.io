blockquote {
    font-size: 15px;
    background: #f7f7f7;
    padding: 15px 20px;
    margin: 10px 0;
    border-left: 4px solid #f66;
}

blockquote:before {
    position: absolute;
    /*top: 14px;
    left: -12px;*/
    margin-left: -32px;
    /*margin-top: 14px;*/
    background-color: #f66;
    color: #fff;
    content: "!";
    width: 20px;
    height: 20px;
    border-radius: 100%;
    text-align: center;
    line-height: 20px;
    font-weight: bold;
    font-family: 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif;
    font-size: 14px;
}

blockquote p {
    margin-bottom: 0;
}

.reward-wrapper {
    padding: 20px 0 20px;
    text-align: center;
    clear: both;
}

.reward-comment {
    color: #999;
    margin: 15px auto 10px;
}

.reward-btn
    display: inline-block;
    margin-bottom: 0;
    font-weight: 400;
    text-align: center;
    vertical-align: middle;
    touch-action: manipulation;
    cursor: pointer;
    background-image: none;
    border: 1px solid transparent;
    white-space: nowrap;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857;
    border-radius: 4px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    margin-bottom: 20px;
    padding: 8px 25px;
    font-size: 16px;
    color: #fff;
    background-color: #ea6f5a;

    &:hover 
        text-decoration: none;
        background-color: #ec6149;
        border: 1px solid transparent


